{% if todo_elements %}
    {% if app.user %}
    <button id="add_list" data-todo_id="{{todo_id}}"> Add my lists</button><hr>

    {% endif %}  
	{% for todo in todo_elements %}
		<li data-clicked="false" class="todo_element" style="font-family: Segoe UI; font-size:30px; border:0px solid grey; padding:10px;"> {{ todo.description }} {% if todo.optional %} <span style="font-size: 13px; float:right;">optional</span> {% endif %}</li> <p></p>
		<hr>
	{% endfor %}

{% endif %}